<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="actionMenuTextColor">@color/actionMenuTextColor</item>

<!--New properties-->

        <!--New properties-->
        <item name="cardRadius">10dp</item>
        <item name="backgroundcolor">#ffffff</item>
        <item name="backgroundCard">#ffffff</item>
        <item name="textcolor">#000000</item>
        <item name="buttoncolor">#2196f3</item>


        <item name="android:windowAnimationStyle">@style/windowAnimationTransition</item>

    </style>

    <!--Code for full screen and hiding status and action bar-->

    <style name="HideAppBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!--hiding app bar but not status bar-->
    <style name="HideAppBarButNotStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/normalColor</item>
        <item name="colorControlActivated">@color/activationColor</item>
    </style>


    <style name="AppTheme.PopUp">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

<!--removing shadow of appbar-->
 <!--
    <style name="MyNoActionBarShadowTheme" parent="RateAppBAr">
        <item name="android:windowContentOverlay">@null</item>
    </style>-->

    <!--Dark mode attributes colors-->

    <style name="DarkMode" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="backgroundcolor">#303030</item>
        <item name="backgroundCard">#424242</item>
        <item name="textcolor">#E2FFFFFF</item>
        <item name="tintcolor">#ffffff</item>
        <item name="buttoncolor">#2196f3</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="actionMenuTextColor">@color/actionMenuTextColor</item>
        <item name="android:windowAnimationStyle">@style/windowAnimationTransition</item>
        <item name="cardRadius">10dp</item>
    </style>



    <style name="windowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>
