<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/backgroundcolor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.CardView
       app:cardBackgroundColor="?attr/backgroundCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        app:cardPreventCornerOverlap="false"
        android:elevation="10dp"
        app:cardCornerRadius="7dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_marginTop="15dp"
                android:id="@+id/profilePic"
                android:outlineSpotShadowColor="#61000000"
                android:layout_width="185dp"
                android:layout_height="185dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:civ_border_color="#EEEEEE"
                app:civ_shadow="true"
                app:civ_shadow_color="#E24A148C"/>
            <View
                android:layout_marginLeft="10dp"
                android:layout_below="@id/profilePic"
                android:id="@+id/viewy"
                android:layout_marginTop="12dp"
                android:layout_width="130dp"
                android:layout_height="2dp"
                android:layout_centerHorizontal="true"
                android:background="#f00000"/>

            <TextView
                android:textColor="?attr/textcolor"
                android:id="@+id/organizer_team_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/organizer_name"
                android:textAlignment="center"
                android:textSize="17sp"
                android:layout_marginBottom="15dp"/>


            <TextView
                android:textAlignment="center"
                android:layout_marginTop="12dp"
                android:textColor="?attr/textcolor"
                android:id="@+id/organizer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewy"
                android:textSize="19sp"
               />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
